{
  "mcpServers": {
    "filesystem": {
      "command": "electron",
      "args": [
        "./resources/mcp/filesystem.mjs",
        "./docs"
      ],
      "env": {},
      "descriptions": "访问和管理本地文件系统",
      "icons": "🗂️",
      "autoApprove": [
        "all"
      ],
      "disable": false
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {},
      "descriptions": "内存存储服务",
      "icons": "🧠",
      "autoApprove": [
        "all"
      ],
      "disable": false
    }
  },
  "defaultServer": "filesystem"
}
